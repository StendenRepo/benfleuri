model Employee {
  id      Int     @id @default(autoincrement())
  name    String
  isAdmin Boolean @default(value: false)
  orders  Order[]
}

model Reciever {
  id           Int     @id @default(autoincrement())
  firstName    String
  lastName     String
  city         String
  phone_number String
  email        String
  postal_code  String
  streetName   String
  houseNumber  String  @db.VarChar(5)
  Order        Order[]
}

model Order {
  id              Int           @id @default(autoincrement())
  customerId      Int
  employeeId      Int
  recieverId      Int
  productInfo     String
  message         String
  extraInfo       String
  cardType        CardType
  includeDelivery Boolean
  price           Int
  dateOfDelivery  DateTime
  orderState      OrderState    @default(OPEN)
  orderDate       DateTime      @default(now())
  paymentMethod   PaymentMethod
  customer        Customer[]
  reciever        Reciever      @relation(fields: [recieverId], references: [id])
  Employee        Employee      @relation(fields: [employeeId], references: [id])
}

enum CardType {
  NONE
  BASIC_CARD
  RIBBON
  SPECIAL_CARD
}

enum OrderState {
  OPEN
  CLOSED
  IN_PROGRESS
  DELIVERED
}

enum PaymentMethod {
  CASH
  PIN
  BY_INVOICE
}
